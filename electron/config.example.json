{
  "freesound": {
    "clientId": "your-freesound-client-id",
    "apiKey": "your-freesound-api-key"
  },
  "openWeather": {
    "apiKey": "your-openweather-api-key"
  },
  "autoUpdate": {
    "updateUrl": "https://your-update-server.com/updates.json",
    "checkInterval": 60,
    "githubRepo": "your-username/your-repo",
    "buildScript": "npm run build",
    "installDir": "/path/to/installation/directory",
    "relativeReleaseDir": "release/linux-[arm64]-unpacked"
  },
  "arduino": {
    "cliPath": "C:\\Program Files\\Arduino\\arduino-cli.exe",
    "boardType": "arduino:avr:uno",
    "port": "COM3"
  },
  "dev": {
    "mockSerial": true,
    "mockSystemAudio": true,
    "debugTouchNoise": false
  }
}
